<% include ./header %>
    <title>Modificar Banco</title>
</head>

<body>
    <%include ./menu %>
    <div class="contenido abrir">
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container navbar-brand">Modificar Banco
        </div>
    </nav>
    
    <i id="menu-bar" class="fas fa-bars fa-2x m-2"></i>
    
    <div class="col-7">
        
        <div class="card m-2 pt-3">
            
            <div class="card-body">
                <form action="/bancos/edit/<%=bancos.idBanco %>" method="post">
                    <div class="form-group row">
                        <label class="col-3 col-form-label">Nombre:</label>
                        <input type="text" name="nombre" id="nombre" value="<%= bancos.nombreBanco %>" class="form-control col-7" required>
                    </div>
                    <div class="form-group row">
                        <label class="col-3 col-form-label">Telefono:</label>
                        <input type="number" name="telefono" id="telefono" value="<%= bancos.telefonoBanco %>" class="form-control col-7" required>
                    </div>
                    <div class="form-group row">
                        <label class="col-3 col-form-label">Email:</label>
                        <input type="email" name="email" id="email" value="<%= bancos.emailBanco %>" class="form-control col-7" required>
                    </div>
                    <div class="form-group mt-5">
                        <input type="submit" value="Modificar" class="btn btn-primary mr-2">
                        <a href="/bancos" role="button" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>
<script src="/js/abrirMenu.js"></script>
<script>
    $(document).ready(()=>{
        $('#nombre').focus();
    })
</script>
</body>
</html>